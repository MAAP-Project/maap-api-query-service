{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2018",
    "lib": ["es2018"],
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "alwaysStrict": true
  },
  "include": ["src/**/*"]
}
